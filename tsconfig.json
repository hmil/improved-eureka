{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "es6",
        "moduleResolution": "node",
        "downlevelIteration": true,
        "lib": [
            "ES2015",
            "DOM"
        ],
        "strict": true,
        "target": "es5",
        "baseUrl": "src"
    },
    "include": [
        "src/**/*.ts"
    ]
}